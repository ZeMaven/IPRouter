@model MomoSwitchPortal.Models.ViewModels.Account.ForgotPasswordUsernameViewModel
@{
    ViewData["Title"] = "Login page";
    Layout = "AccountLayout";
}
<div class="card z-index-0 fadeIn3 fadeInBottom">
    <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
        <div class="border-radius-lg py-3 pe-1" style="background-color: #003E5F;">
            <h4 class="text-white font-weight-bolder text-center mt-2 mb-0">Forgot Password</h4>
            <div class="row mt-3">
                <div class="col-2 text-center ms-auto">
                    <a class="btn btn-link px-3" href="https://www.facebook.com/MoMofromMTN/">
                        <i class="fa fa-facebook text-white text-lg"></i>
                    </a>
                </div>
                <div class="col-2 text-center px-1">
                    <a class="btn btn-link px-3" href="https://www.instagram.com/momofrommtn/?igsh=MWx3ZWZoYTF5NmwzZw%3D%3D">
                        <i class="fa fa-instagram text-white text-lg"></i>
                    </a>
                </div>
                <div class="col-2 text-center me-auto">
                    <a class="btn btn-link px-3" href="https://www.momo.ng/">
                        <i class="fa fa-google text-white text-lg"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        @if (!Model.EmailSent)
        {
            <p class=" text-center text-sm text-[rgba(0,0,0,0.7)] w-[350px] mx-auto">
                No worries enter your correct username, and an email would be sent to it
            </p>


            <form action="~/account/forgotpassword" method="post" class="text-start">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                <div>
                    <div class="input-group input-group-outline mb-3">
                        @Html.TextBoxFor(M => M.Username, new
                            {
                                @class = "form-control",
                                placeholder = "Username"
                            })
                    </div>
                </div>
                <button type="submit" class="btn w-100 my-4 mb-2" style="background-color: #003E5F; color: white;">Submit</button>
            </form>
        }
        @if (Model.EmailSent)
        {
            <div style="color:green;font-size:16px;">
                Follow the steps sent to your email
            </div>
        }
    </div>
</div>

                    