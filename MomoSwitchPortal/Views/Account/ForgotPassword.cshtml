@model MomoSwitchPortal.Models.ViewModels.Account.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Login page";
    Layout = "AccountLayout";
}
<div class="card z-index-0 fadeIn3 fadeInBottom">
    <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
        <div class="border-radius-lg py-3 pe-1" style="background-color: rgb(221,166,0);">
            <h4 class="font-weight-bolder text-center mt-2 mb-0" style="color:#003E5F;">Set Password</h4>
            <div class="row mt-3">
                <div class="col-2 text-center ms-auto">
                    <a class="btn btn-link px-3" href="https://www.facebook.com/MoMofromMTN/" style="color:#003E5F;">
                        <i class="fa fa-facebook text-lg"></i>
                    </a>
                </div>
                <div class="col-2 text-center px-1">
                    <a class="btn btn-link px-3" href="https://www.instagram.com/momofrommtn/?igsh=MWx3ZWZoYTF5NmwzZw%3D%3D" style="color:#003E5F;">
                        <i class="fa fa-instagram text-lg font-weight-bold"></i>
                    </a>
                </div>
                <div class="col-2 text-center me-auto">
                    <a class="btn btn-link px-3" href="https://www.momo.ng/" style="color:#003E5F;">
                        <i class="fa fa-google text-lg"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">

        <form action="~/account/resetpassword" method="post">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            @Html.HiddenFor(x => x.Key)

            <div>
                <div class="input-group input-group-outline mb-3">
                    @Html.TextBoxFor(M => M.Username, new
                        {
                            @class = "form-control",
                            placeholder = "Username",
                            @readonly = "readonly"
                        })
                </div>
            </div>

      
            <div class="input-group input-group-outline mb-3 border rounded">
                @Html.PasswordFor(M => M.Password, new
                    {
                        @class = "form-control border-0",
                        placeholder = "Password",
                        @id = "passwordField"
                    })
                <button class="border rounded py-2 px-3" type="button" id="togglePassword">
                    <i class="far fa-eye " id="eyeIcon"></i>
                </button>
            </div>


            <div class="input-group input-group-outline mb-3 border rounded">
                @Html.PasswordFor(M => M.ConfirmPassword, new
                    {
                        @class = "form-control border-0",
                        placeholder = "Confirm Password",
                        @id = "cPasswordField"
                    })
                <button class="border rounded py-2 px-3" type="button" id="cTogglePassword">
                    <i class="far fa-eye " id="cEyeIcon"></i>
                </button>
            </div>

            <div class="text-center">
                <button type="submit" class="btn w-100 my-4 mb-2" style="background-color: rgb(221,166,0); color: #003E5F;">Submit</button>
            </div>
        </form>
    </div>
</div>

@await Component.InvokeAsync("Notyf")
