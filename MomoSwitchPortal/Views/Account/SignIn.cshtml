                <div class=" mt-[23px] mb-[54px] credentials-wrap">
                    <p class=" text-center text-sm text-[rgba(0,0,0,0.7)] w-[350px] mx-auto">
                        Please
                        enter your correct login credentials to gain access to your dashboard
                    </p>
                </div>
                <form action="~/account/signin" method="post">

                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                    <div>
                        <div class="flex flex-col input-wrap relative lg:mb-14 md:mb-14 sm:mb-12 mb-12">

                            @Html.TextBoxFor(M => M.Username, new
                                {
                                    @class = "brd  h-[52px] mt-2  w-[100%] bg-[rgba(0,0,0,0.05)] focus:outline-0 focus:ring-0 relative z-0 rounded-[5px] px-5 border-0 placeholder:text-[rgba(0,0,0,0.5)]",
                                    placeholder = "example@disbutePortal.com"
                                })
                            <label for="Username"
                                   class="font-normal form-label ease-in-out duration-300  px-1  whitespace-nowrap text-[14px]">
                                Username
                            </label>
                            @Html.ValidationMessageFor(M => M.Username, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="flex flex-col input-wrap relative mb-7">
                        <span class="absolute right-[24px] top-[23px] z-20">
                            <span class="show_password toggle_password text-[rgba(0,0,0,0.7)] cursor-pointer">
                                <i class="far fa-eye" id="togglePassword"></i>
                            </span>
                        </span>
                        <input type="password" id="Password" name="Password" class="brd  h-[52px] mt-2 input-control w-[100%] bg-[rgba(0,0,0,0.05)] focus:outline-0 focus:ring-0  relative z-0 rounded-[5px] px-5 border-0 placeholder:text-[rgba(0,0,0,0.5)]" placeholder="*******">
                        <label for="Password" class="font-normal form-label ease-in-out duration-300  px-1  whitespace-nowrap text-[14px]">Password</label>
                        @Html.ValidationMessageFor(M => M.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="flex ">
                        <input type="checkbox" id="KeppLoggedIn" name="KeepLoggedin" class="form-checkbox h-4 w-4 text-green-500 rounded">
                        <label for="KeepLoggedIn" class="text-sm text-gray-400 ml-[5px]">Remember me</label>
                    </div>
                    <a href="~/account/forgotPassword"
                       class="text-sm font-medium text-sans text-[#000] flex mt-[10px] lg:mb-[15px] md:mb-[15px] sm:mb-[35px] mb-[35px] justify-end ">
                        Forgot Password?
                    </a>

                    <button type="submit" class="flex items-center justify-center bil-btn-gradient text-base font-normal grad3 w-full h-[52px] first-letter text-[#F0F0F0] rounded-[5px]">Login</button>

                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        //Password
        const togglePassword = document.querySelector('#togglePassword');
        const password = document.querySelector('#Password');

        togglePassword.addEventListener('click', function (e) {
            // toggle the type attribute
            const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
            password.setAttribute('type', type);
            // toggle the eye slash icon
            this.classList.toggle('fa-eye-slash');
        });

        //Confirm Password
        const togglePassword2 = document.querySelector('#toggleConfirmPassword');
        const password2 = document.querySelector('#confirmPassword');

        togglePassword2.addEventListener('click', function (e) {
            // toggle the type attribute
            const type = password2.getAttribute('type') === 'password' ? 'text' : 'password';
            password2.setAttribute('type', type);
            // toggle the eye slash icon
            this.classList.toggle('fa-eye-slash');
        });

    </script>

}
